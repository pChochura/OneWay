        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="35dp"
        android:paddingTop="15dp"
        android:paddingRight="35dp"
        android:paddingBottom="15dp"
        android:layout_centerInParent="true"
        android:background="@drawable/hint_box"
        android:id="@+id/HintBox"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint"
            android:id="@+id/textHint"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:id="@+id/InformationContainer"
        android:layout_above="@+id/BottomBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/moves"
            android:id="@+id/textMoves"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:padding="10dp"
            android:layout_toLeftOf="@+id/imageDivider"/>

        <ImageView
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageDivider"
            android:layout_alignTop="@+id/textLevel"
            android:layout_alignBottom="@+id/textLevel"
            android:background="@color/colorPrimary"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level"
            android:id="@+id/textLevel"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:padding="10dp"
            android:layout_toRightOf="@+id/imageDivider"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/BottomBar"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageBack"
            android:src="@mipmap/ic_arrow_back"
            android:clickable="true"
            android:onClick="clickBack" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageHint"
            android:layout_toRightOf="@+id/imageBack"
            android:src="@mipmap/ic_lightbulb_outline"
            android:adjustViewBounds="false"
            android:clickable="true"
            android:onClick="clickHint"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageRestart"
            android:layout_toRightOf="@+id/imageHint"
            android:src="@mipmap/ic_refresh"
            android:clickable="true"
            android:onClick="clickRestart" />

    </RelativeLayout>

