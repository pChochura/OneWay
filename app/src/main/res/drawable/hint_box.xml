<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="2dp" android:right="2dp" android:bottom="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#14212121" />
            <corners android:bottomRightRadius="4dp"
                android:bottomLeftRadius="4dp"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp" />
        </shape>
    </item>
    <item android:left="2dp" android:right="4dp" android:bottom="4dp" android:top="2dp" android:id="@+id/card">
        <shape android:shape="rectangle">
            <solid android:color="#c8263238" />
            <corners android:bottomRightRadius="4dp"
                android:bottomLeftRadius="4dp"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp" />
        </shape>
    </item>
</layer-list>